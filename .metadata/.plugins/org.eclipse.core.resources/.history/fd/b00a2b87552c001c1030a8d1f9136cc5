

#include "Pedido.h"
int InicializarPedidos(Recoleccion* cliente, int len){

	setbuf(stdout,NULL);

	int retorno;
	retorno = -1;

	if(cliente != NULL && len>=0){
		for (int i = 0; i < len; i++) {

		cliente[i].isEmpty = TRUE;
		cliente[i].cantidadPedidosPendientes = 0;
		cliente[i].cantidadPedidosCompletados = 0;
		}
		retorno = 0;
	}


	return retorno;

}/*
 * Pedido.c
 *
 *  Created on: 13 oct. 2021
 *      Author: Yeller
 */


